apiVersion: v1
baseDomain: {{ base_domain }}
compute:
- name: worker
  replicas: {{ compute_nodes | length }}
controlPlane:
  name: master
  replicas: {{ control_plane_nodes | length }}
metadata:
  name: {{ cluster_name }}
networking:
  clusterNetwork:
  - cidr: 10.128.0.0/14
    hostPrefix: 23
  machineNetwork:
  - cidr: {{ machine_cidr }}
  networkType: OVNKubernetes
  serviceNetwork:
  - 172.30.0.0/16
platform:
  none: {}
{% if control_plane_nodes | length == 1 %}
bootstrapInPlace:
  installationDisk: /dev/sda
{% endif %}
pullSecret: '{{ pull_secret }}'
{% if ssh_keys is defined %}
sshKey: |
{% for ssh_key in ssh_keys %}
  {{ ssh_key }}
{% endfor %}
{% endif %}
